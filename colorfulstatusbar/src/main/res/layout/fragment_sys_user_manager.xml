<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhy.colorfulstatusbar.Fragment.SysUserManagerFragment"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/id_columnheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:id="@+id/column_split_1"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#66CCFF"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/column_selected"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="选择"
            android:visibility="gone"
            />
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#66CCFF"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/column_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textSize="16sp"
            android:singleLine="true"
            android:textColor="#444"
            />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#66CCFF"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/column_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="角色"
            android:textSize="16sp"
            android:singleLine="true"
            android:textColor="#444"
            />
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#66CCFF"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/column_adjustpeak"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="姓名"
            android:singleLine="true"
            android:textColor="#444" />
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#66CCFF"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/column_alertstreshold"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="电话"
            android:singleLine="true"
            android:textColor="#444" />
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#66CCFF"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/column_peakthreshold"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="描述"
            android:singleLine="true"
            android:textColor="#444" />
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#66CCFF"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"></LinearLayout>


</LinearLayout>
